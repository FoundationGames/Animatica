{
  "schemaVersion": 1,
  "id": "animatica",
  "version": "${version}",

  "name": "Animatica",
  "description": "Allow for animating more game textures using the MCPatcher/OptiFine animation format",
  "authors": [
    "FoundationGames"
  ],
  "contact": {
    "homepage": "https://github.com/FoundationGames/Animatica",
    "sources": "https://github.com/FoundationGames/Animatica"
  },

  "license": "LGPLv3",
  "icon": "assets/animatica/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.foundationgames.animatica.Animatica"
    ]
  },
  "mixins": [
    "animatica.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.12.11",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  }
}
